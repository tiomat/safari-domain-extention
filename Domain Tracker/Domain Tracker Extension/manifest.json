{
  "manifest_version": 3,
  "name": "Domain Tracker",
  "version": "1.0",
  "description": "Shows all domains that the current tab sends requests to",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "96": "images/icon-96.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Domain Tracker"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
